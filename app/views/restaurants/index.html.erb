<div class="container">
  <div class="index-header">
    <h2>Your search</h2>
  </div>

  <div class="menu">
    <input checked="" class="menu_input" id="btn1" name="menu" type="radio" />
    <input class="menu_input" id="btn2" name="menu" type="radio" />
      <label class="menu_label" for="btn2">
        <div class="fa-solid fa-list"></div>
        <div class="menu_text">
        List
        </div>
      </label>
    <input class="menu_input" id="btn3" name="menu" type="radio" />
      <label class="menu_label" for="btn3">
        <div class="fa-solid fa-map-pin"></div>
        <div class="menu_text">
          Map
        </div>
      </label>
  </div>


  <div class="nav-btns">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">List</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Map</button>
      </li>
    </ul>
  </div>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0"><%= render "shared/index_card" %></div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0"><%= render "shared/map" %></div>
  </div>
</div>
