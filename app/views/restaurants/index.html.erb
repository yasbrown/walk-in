<div class="container">
  <div class="index-header">
    <h2>Your search</h2>
    <button type="button"
      class="search-select" data-bs-toggle="modal"
      data-bs-target="#filterModal">
      Filter  <%= image_tag("filter.png") %>
    </button>
    <div class="modal fade" id="filterModal" aria-hidden="true"
      aria-labelledby="exampleModalToggleLabel" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1>Filters</h1>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= form_with url: "/restaurants", method: :get do |form| %>
              <div class="filter-section">
                <h2>Cuisine</h2>
                <div class="filter-list">
                  <%= form.collection_check_boxes :query, Restaurant.all, :id, :cuisine do |c| %>
                    <%= c.check_box(class: "filter-check") %>
                    <%= c.label(:"data-value" => c.value, class: "filter-input") %>
                  <% end %>
                  </div>
                </div>
              </div>
              <div class="filter-section">
                <h2>Rating</h2>
                <div class="filter-list">

                    <%= check_box_tag(:rating, value: 5, class: "filter-check") %>
                    <%= check_box_tag(:rating, value: 4, class: "filter-check") %>
                    <%= check_box_tag(:rating, value: 3, class: "filter-check") %>
                    <%= check_box_tag(:rating, value: 2, class: "filter-check") %>
                    <%= check_box_tag(:rating, value: 1, class: "filter-check") %>

                </div>
              </div>
              <div class="filter-section">
                <div class="modal-footer">
                  <button type="button"><%= form.submit "Apply", class: "search-select" %></button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-input results"><%= @restaurant_address %>, <%= @date %>, <%= @needed_after %> - <%= @needed_before %>, <%= @needed_seats %> guests</div>

  <div class="index-items">
    <div class="menu nav-btns">
      <ul class="nav nav-pills" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
          <input class="menu_input nav-link active" id="btn2 pills-home-tab" name="menu" type="radio" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true" />
            <label class="menu_label" for="btn2 pills-home-tab">
              <div class="fa fa-bars"></div>
              <div class="menu_text">
              List
              </div>
            </label>
        </li>

        <li class="nav-item" role="presentation">
          <input class="menu_input nav-link" id="btn3 pills-profile-tab" name="menu" type="radio" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="true" />
            <label class="menu_label" for="btn3 pills-profile-tab">
              <div class="fa-solid fa-map-pin"></div>
              <div class="menu_text">
                Map
              </div>
            </label>
        </li>
      </ul>
    </div>

    <%= link_to "French", restaurants_path(restaurant: @params, cuisine: "French") %>


    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0"><%= render "shared/index_card" %></div>
      <div class="map tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0"><%= render "shared/map" %></div>
    </div>
  </div>

</div>
