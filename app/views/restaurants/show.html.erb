<div class="restaurant-images">
</div>
<div class="restaurant-text" data-controller="restaurant-show">
  <div class="restaurant-heading">
    <div class="left-heading">
      <h2><%= @restaurant.name %></h2>
      <div class="restaurant-map">
        <img src="pin-purple" alt="pin">
        <p>See on maps -></p>
      </div>
    </div>
    <div class="right-heading">
      <p>Ratings</p>
      <p><%= @restaurant.rating %> <i class="icon-light fa-sharp fa-solid fa-star"></i><%= @restaurant.reviews.count %></p>
      <p>Read reviews</p>
    </div>
  </div>
  <div class="restaurant-times">
    <% @available_slots.each do |slot| %>
        <p class="time-slot" data-action="click->restaurant-show#show"><%= slot %>:00</p>
    <% end %>
  </div>
  <%# <button class="button purple medium ">Confirm</button> %>
  <a class="button purple medium hide" id="tables-modal" data-bs-toggle="modal" href="#tableSelectModal" role="button" data-restaurant-show-target="button">Reserve</a>
  <div class="modal fade" id="tableSelectModal" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalToggleLabel">Choose a table</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="tables-display">
            <% @restaurant.covers.each_with_index do |cover, index| %>
              <div class="table-display">
                <%= index + 1 %>
              </div>
            <% end %>

            <%= simple_form_for @restaurant do |f| %>
              <%# <%= f.input : %>
            <% end %>
          </div>
      </div>
      <div class="modal-footer">
        <button class="button purple medium" data-bs-target="#tableConfirmModal" data-bs-toggle="modal">Continue</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="tableConfirmModal" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalToggleLabel2">Choose a table</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="tables-display">
          </div>
      </div>
      <div class="modal-footer">
        <button class="button light medium" data-bs-target="#tableSelectModal" data-bs-toggle="modal">Back to first</button>
        <button class="button purple medium" data-bs-target="#bookingConfirmModal" data-bs-toggle="modal">Continue</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="bookingConfirmModal" aria-hidden="true" aria-labelledby="exampleModalToggleLabel3" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalToggleLabel3">Confirm booking</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="tables-display">
        </div>
      </div>
      <div class="modal-footer">
        <button class="button light medium" data-bs-target="#tableConfirmModal" data-bs-toggle="modal">Edit booking</button>
        <button class="button purple medium" data-bs-target="#bookingConfirmModal" data-bs-toggle="modal">Confirm</button>
      </div>
    </div>
  </div>
</div>

  <div class="restaurant-description">
    <p><%= @restaurant.description %></p>
  </div>
  <div class="more-restaurants">
    <h2>More tables at</h2>
    <div class="restaurant-cards-small row"></div>
  </div>
</div>
