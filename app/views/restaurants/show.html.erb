<div class="restaurant-images">
  <%= cl_image_tag @restaurant.photo.key, height: 200, width: 390, crop: :fill %>
</div>

<div class="restaurant-text" data-controller="restaurant-show">
  <div class="restaurant-heading">
    <h2><%= @restaurant.name %></h2>
  </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="false">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
        </div>
        <div class="carousel-item">
          <div class="restaurant-map">
            <img src="pin-purple" alt="pin">
            <p>See on maps -></p>
              <div><%= render "shared/map" %></div>
          </div>
        </div>
      </div>
      <div>
      <div class="right-heading">
        <p><%= @restaurant.rating %> <i class="icon-light fa-sharp fa-solid fa-star"></i> <%= @restaurant.reviews.count %></p>
        <p>Read reviews</p>
      </div>
      <div class="restaurant-times">
        <div class="restaurant-times-grid">
          <% @available_slots.each do |slot| %>
              <span class="time-slot" data-action="click->restaurant-show#show click->restaurant-show#active" data-restaurant-show-target="time" ><%= slot %>:00</span>
          <% end %>
        </div>
      </div>
      <%# <a class="button purple medium hide" id="tables-modal" data-bs-toggle="modal"
      href="#tableSelectModal" role="button" data-restaurant-show-target="button">Reserve</a> %>
      <div class="center-btn">
        <button class="button purple medium hide", style="text-align: center", data-restaurant-show-target="button"><%= link_to "Reserve", restaurant_covers_path(@restaurant.covers, query: @params) %></button>
      </div>
      <div class="restaurant-description">
        <p><%= @restaurant.description %></p>
      </div>

  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon visually-hidden" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon visually-hidden" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<div class="more-restaurants">
  <h2>More tables at</h2>
  <div class="restaurant-cards-small row"></div>
</div>
