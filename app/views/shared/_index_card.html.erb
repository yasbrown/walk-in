<% @restaurants.each do |restaurant| %>
  <div class="card-container">
    <%= cl_image_tag restaurant.photo.key, height: 100, width: 100, crop: :fill  %>

    <div class="restaurant-info">
      <div class="title">
        <h4><%= link_to restaurant.name, restaurant_path(restaurant.id, query: {
          date: @params["date"],
          needed_seats: @params["total_seats_available"],
          needed_after: @params["opening_time"],
          needed_before: @params["closing_time"]
          }) %></h4>
        <p><%= restaurant.rating %></p>
      </div>

      <p><%= restaurant.description.truncate(60) %></p>

      <div class="restaurant-cuisine-price">
        <p><%= restaurant.cuisine %></p>
        <div>
          <% (restaurant.price).times do %>
            <i class="fa-solid fa-sterling-sign" id="price-dark"></i>
          <% end %>
          <% (3 - restaurant.price).times do %>
            <i class="fa-solid fa-sterling-sign" id="price-light"></i>
          <% end %>
        </div>
      </div>

    </div>
  </div>
<% end %>
