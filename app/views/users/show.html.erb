<div class="container">
  <div class="profile-header">
    <h1><%= @user.name %></h1>
  </div>

  <div>
    <h2>Booked</h2>
    <%# <% if @bookings.nil?%>
        <%# <p>Oops! You don't have any bookings. Not feeling hungry?</p> %>
    <%# <% end %> %> %>
    <%= @user.bookings %>
  </div>

  <div class="favorites">
    <div class="favorites_title">
      <h2>Favourites</h2>
    </div>
    <div class="favorites_description">
      <%= render "shared/index_card_favourites" %>
    </div>
  </div>
</div>
<%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "button_logoff" %>
<%# <%= link_to '<button type="button">Log Out</button>'.html_safe, destroy_user_session_path, data: {turbo_method: :delete}, class: "button_logoff" %>

<a href="#" class="direction">
  <span>Direction</span>
  <div class="liquide maps-button" data-bs-toggle="modal" data-bs-target="#restaurantFilterModal"></div>
</a>

<div class="modal fade" id="restaurantFilterModal" aria-hidden="true" aria-labelledby="restaurantFilterModalLabel" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalToggleLabel2">Location</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "shared/map" %>
      </div>
    </div>
  </div>
  <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
</div>
